<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel_infor_general"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:pageColor="@color/colorAccent"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp"
            app:autoPlay="true"
            app:radius="6dp"
            android:layout_margin="15dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_crear_entidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="crearEntidadPrueba"
            android:text="Crea Entidad Prueba" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_consultar_entidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="consultarEntidadPrueba"
            android:text="Consultar Entidad Prueba" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_consultar_lista_entidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="consultarListaPrueba"
            android:text="Consultar Lista Prueba" />
    </LinearLayout>
</ScrollView>